<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.adhiraj.beans.Student" id="stdObj">
    	<property name="name" value="Adhiraj Adhi" />
    	<property name="roll" value="89" />
    	<!-- In case of Map we set values as: -->
    	<property name="subAndMarks">
    		<map>
    			<entry key="C" value="87" />
    			<entry key="C++" value="77" />
    			<entry key="Java" value="92" />
    			<entry key="Python" value="92" />
    		</map>
    	</property>
    </bean>

</beans>